<div class="dashboard">
    {{> post-info post}}
    {{#if loggedIn}}
    <form class="comment-form">
        <div>
            <textarea name="comment-body"></textarea>
            <br>
            <a class="edit" href="/dashboard/edit/{{post.id}}">Edit</a>
        </div>
        <div>
            <button class="create-btn add-btn" type="submit">add comment</button>
        </div>
    </form>
    {{/if}}
    {{> comments post.comments}}
    {{#if loggedIn}}
    <script src="../public/javascript/comment.js"></script>
    {{/if}}
</div> 
